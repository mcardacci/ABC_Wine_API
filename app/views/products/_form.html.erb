<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: "#{@current_product.name}" %><br>
  <%= f.label :description %>
  <%= f.text_area :description, placeholder: "#{@current_product.description}" %><br>
  <%= f.label :retail_price %>
  <%= f.text_field :retail_price, placeholder: "#{@current_product.retail_price}" %><br>
  <%= f.label :rating %>
  <%= f.text_field :rating, placeholder: "#{@current_product.rating}" %><br>
  <%= f.label :vineyard %>
  <%= f.text_field :vineyard, placeholder: "#{@current_product.vineyard}" %><br>
  <%= f.submit %>
<% end %>